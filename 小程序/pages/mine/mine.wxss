.userinfo {
  position: relative;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  padding-bottom: 30rpx;
}

.userinfo-avatar {
  position: absolute;
  right: 30rpx;
  margin-top: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo-left {
  position: absolute;
  top:20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: column;
  width: 400rpx;
  height: 120rpx;
}

.middle {
  display: flex;
  flex-direction: column;
}

.resume {
  position: relative;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.hh {
  position: relative;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-top: 1px solid #ccc;
}

.hover-class {
  background-color: #2cc998;
}

.choose {
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.choose-m {
  padding:30rpx 0;
  height:50rpx;
  width:400rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}